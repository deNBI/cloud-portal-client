{
  "extends": [
    "config:base",
     ":automergePatch",
     ":automergeMinor"
  ],
    "packageRules": [
    {
      "updateTypes": ["major"],
      "appendLabels": ["renovate::major"]
    },
    {
      "updateTypes": ["minor"],
      "appendLabels": ["renovate::minor"]
    },
     {
      "updateTypes": ["patch"],
      "appendLabels": ["renovate::patch"]
    },
    {
      "updateTypes": ["pin"],
      "appendLabels": ["renovate::pin"]
    },
   ],
  "baseBranches": ["dev"],
  "reviewers": ["team:portal-dev"],
  "labels": ["dependencies"],
  "assignees": ["team:portal-dev"],
  "branchPrefix": "deps/",
  "bumpVersion": "minor",
  "commitMessage": "{{{commitMessagePrefix}}} {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}}",
  "commitMessagePrefix": "feat(Dependencies):"
}
