{
  "extends": [
    "config:base",
     ":automergePatch",
     ":automergeMinor"
  ],
  "packageRules": [
    {
      "updateTypes": ["major"],
      "addLabels": ["major"]
    },
    {
      "updateTypes": ["minor"],
      "addLabels": ["minor"]
    },
     {
      "updateTypes": ["patch"],
      "addLabels": ["patch"]
    },
    {
      "updateTypes": ["pin"],
      "addLabels": ["pin"]
    }
   ],
   "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "baseBranches": ["dev"],
  "reviewers": ["team:portal-dev"],
  "labels": ["dependencies"],
  "assignees": ["team:portal-dev"],
  "branchPrefix": "deps/",
  "bumpVersion": "minor",
  "rebaseWhen": "behind-base-branch",
  "commitBodyTable": "true",
  "commitMessagePrefix": "feat(Dependencies):"
}
